/* pages/bind-student/bind-student.wxss */
.bind-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f9ff 0%, #e0f2fe 100%);
  padding-bottom: 40rpx;
}

/* 顶部提示 */
.bind-header {
  background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
  padding: 60rpx 40rpx;
  color: white;
  text-align: center;
}

.header-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.6;
}

/* 表单 */
.bind-form {
  background: white;
  margin: 30rpx 40rpx;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #1e293b;
  margin-bottom: 16rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.required {
  color: #ef4444;
  font-size: 32rpx;
}

.optional {
  font-size: 24rpx;
  color: #94a3b8;
  font-weight: 400;
}

.form-input {
  width: 100%;
  padding: 24rpx 32rpx;
  background: #f8fafc;
  border: 2rpx solid #e0f2fe;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1e293b;
  transition: all 0.3s;
}

.form-input:focus {
  background: white;
  border-color: #0ea5e9;
}

.picker-value {
  width: 100%;
  padding: 24rpx 32rpx;
  background: #f8fafc;
  border: 2rpx solid #e0f2fe;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1e293b;
  position: relative;
}

.picker-value::after {
  content: '›';
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%) rotate(90deg);
  font-size: 32rpx;
  color: #94a3b8;
}

/* 固定学校显示 */
.school-fixed {
  width: 100%;
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border: 2rpx solid #0ea5e9;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.school-name {
  font-size: 28rpx;
  color: #0ea5e9;
  font-weight: 600;
}

.school-badge {
  width: 44rpx;
  height: 44rpx;
  background: #0ea5e9;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* 提示信息 */
.bind-tips {
  margin: 0 40rpx;
  padding: 30rpx;
  background: #f0f9ff;
  border-radius: 24rpx;
  border-left: 6rpx solid #0ea5e9;
}

.tip-item {
  font-size: 26rpx;
  color: #0ea5e9;
  line-height: 1.8;
  margin-bottom: 12rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

/* 提交按钮 */
.bind-actions {
  margin: 40rpx 40rpx 0;
}

.submit-btn {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(14, 165, 233, 0.3);
  transition: all 0.3s;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(14, 165, 233, 0.4);
}

.submit-btn::after {
  border: none;
}

