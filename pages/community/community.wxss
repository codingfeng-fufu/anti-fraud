.community-container{
  min-height:100vh;
  background:#f0f9ff;
}
.top-bar{
  padding: calc(24rpx + env(safe-area-inset-top)) 28rpx 24rpx 28rpx;
  display:flex;
  align-items:center;
  justify-content:space-between;
  background:#0ea5e9;
  color:#fff;
}
.title{font-size:36rpx;font-weight:700;}
.create-btn{
  background:#fff;
  color:#0ea5e9;
  font-size:28rpx;
  padding:8rpx 22rpx;
  border-radius:999rpx;
}
.list{height:calc(100vh - 96rpx - env(safe-area-inset-top)); padding:20rpx 20rpx;}
.post-card{
  background:#fff;
  border-radius:20rpx;
  padding:22rpx;
  margin-bottom:18rpx;
  box-shadow:0 10rpx 24rpx rgba(2,132,199,0.10);
}
.post-header{display:flex;align-items:center;}
.avatar{width:72rpx;height:72rpx;border-radius:36rpx;background:#e2e8f0;}
.avatar.placeholder{display:flex;align-items:center;justify-content:center;}
.meta{margin-left:16rpx;}
.name{font-size:30rpx;font-weight:600;color:#0f172a;}
.time{font-size:24rpx;color:#64748b;margin-top:4rpx;}
.content{margin-top:14rpx;font-size:28rpx;color:#0f172a;line-height:1.5;word-break:break-all;}
.images{display:flex;flex-wrap:wrap;margin-top:12rpx;gap:10rpx;}
.img{width:210rpx;height:210rpx;border-radius:16rpx;background:#f1f5f9;}
.footer{margin-top:14rpx;font-size:26rpx;color:#64748b;display:flex;justify-content:flex-end;}
.empty{padding:120rpx 20rpx;text-align:center;color:#64748b;}
.empty-icon{font-size:64rpx;}
.empty-text{margin-top:16rpx;font-size:28rpx;}
.loading,.no-more{text-align:center;color:#94a3b8;font-size:26rpx;padding:20rpx 0;}

