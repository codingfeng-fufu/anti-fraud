.container{min-height:100vh;background:#f0f9ff;}
.page-header{display:flex;align-items:center;justify-content:space-between;padding:20rpx 24rpx;background:#0ea5e9;color:#fff;}
.back-icon{font-size:44rpx;}
.header-title{font-size:34rpx;font-weight:700;}
.card{margin:20rpx;background:#fff;border-radius:20rpx;padding:20rpx;box-shadow:0 10rpx 24rpx rgba(2,132,199,0.10);}
.top{display:flex;align-items:center;gap:16rpx;}
.avatar{width:84rpx;height:84rpx;border-radius:42rpx;background:#e2e8f0;}
.avatar.placeholder{display:flex;align-items:center;justify-content:center;}
.info{flex:1;}
.name{font-size:32rpx;font-weight:800;color:#0f172a;}
.uid{margin-top:6rpx;font-size:24rpx;color:#64748b;}
.follow-btn{background:#0ea5e9;color:#fff;font-size:28rpx;border-radius:999rpx;padding:0 22rpx;height:64rpx;line-height:64rpx;}
.follow-btn.secondary{background:#e2e8f0;color:#0f172a;}
.stats{display:flex;justify-content:space-around;margin-top:16rpx;border-top:1rpx solid #f1f5f9;padding-top:16rpx;}
.stat{text-align:center;}
.v{font-size:30rpx;font-weight:800;color:#0f172a;}
.k{font-size:24rpx;color:#64748b;margin-top:4rpx;}
.section-title{font-size:30rpx;font-weight:800;color:#0f172a;margin-bottom:12rpx;}
.chips{display:flex;flex-wrap:wrap;gap:10rpx;}
.chip{background:#dbeafe;color:#0ea5e9;border-radius:999rpx;padding:8rpx 14rpx;font-size:26rpx;}
.ach-list{display:flex;flex-direction:column;gap:12rpx;}
.ach{display:flex;gap:14rpx;align-items:center;background:#f8fafc;border-radius:16rpx;padding:14rpx;}
.ach-icon{width:56rpx;height:56rpx;border-radius:16rpx;background:#dbeafe;color:#0ea5e9;display:flex;align-items:center;justify-content:center;font-size:30rpx;}
.ach-name{font-size:28rpx;font-weight:700;color:#0f172a;}
.ach-desc{font-size:24rpx;color:#64748b;margin-top:4rpx;line-height:1.4;}
.empty{text-align:center;color:#94a3b8;font-size:28rpx;padding:80rpx 0;}

