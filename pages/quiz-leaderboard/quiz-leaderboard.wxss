.container{min-height:100vh;background:#f0f9ff;}
.page-header{display:flex;align-items:center;justify-content:space-between;padding:20rpx 24rpx;background:#0ea5e9;color:#fff;}
.back-icon{font-size:44rpx;}
.header-title{font-size:34rpx;font-weight:700;}
.refresh{font-size:28rpx;}
.card{margin:20rpx;background:#fff;border-radius:20rpx;overflow:hidden;box-shadow:0 10rpx 24rpx rgba(2,132,199,0.10);}
.row{display:flex;align-items:center;padding:18rpx 18rpx;border-bottom:1rpx solid #f1f5f9;}
.row:last-child{border-bottom:none;}
.rank{width:60rpx;font-weight:800;color:#0ea5e9;font-size:30rpx;text-align:center;}
.avatar{width:64rpx;height:64rpx;border-radius:32rpx;background:#e2e8f0;}
.avatar.placeholder{display:flex;align-items:center;justify-content:center;}
.name{flex:1;margin-left:16rpx;color:#0f172a;font-size:30rpx;font-weight:600;}
.points{color:#334155;font-size:28rpx;}
.empty{text-align:center;color:#94a3b8;font-size:28rpx;padding:60rpx 0;}

