/* pages/feedback/feedback.wxss */
.feedback-container {
  min-height: 100vh;
  background: #f8fafc;
}

.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  background: white;
  border-bottom: 2rpx solid #e0f2fe;
}

.header-left, .header-right {
  width: 80rpx;
}

.back-icon {
  font-size: 64rpx;
  color: #0ea5e9;
  line-height: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
}

.tab-bar {
  display: flex;
  margin: 40rpx;
  background: white;
  border-radius: 16rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #64748b;
  text-align: center;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: white;
  background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
  font-weight: 600;
}

/* 常见问题 */
.help-content {
  padding: 0 40rpx;
}

.faq-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.faq-q {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.faq-q::before {
  content: 'Q: ';
  color: #0ea5e9;
}

.faq-a {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.8;
}

.faq-a::before {
  content: 'A: ';
  color: #10b981;
  font-weight: 600;
}

/* 反馈表单 */
.feedback-content {
  padding: 0 40rpx;
}

.feedback-form {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.feedback-textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 24rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.feedback-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  padding: 28rpx 0;
  font-size: 32rpx;
  color: white;
  background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
  border-radius: 16rpx;
  border: none;
  font-weight: 600;
}

.submit-btn::after {
  border: none;
}
