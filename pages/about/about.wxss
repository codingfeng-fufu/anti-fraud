/* pages/about/about.wxss */
.about-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f9ff 0%, #e0f2fe 100%);
  padding-bottom: 40rpx;
}

.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: calc(20rpx + env(safe-area-inset-top)) 40rpx 20rpx 40rpx;
  background: white;
  border-bottom: 2rpx solid #e0f2fe;
}

.header-left, .header-right {
  width: 80rpx;
}

.back-icon {
  font-size: 64rpx;
  color: #0ea5e9;
  line-height: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
}

/* 应用信息 */
.app-info {
  text-align: center;
  padding: 60rpx 40rpx;
}

.app-logo {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.app-name {
  font-size: 44rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.app-version {
  font-size: 26rpx;
  color: #94a3b8;
  margin-bottom: 24rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
}

/* 功能区域 */
.features-section,
.team-section,
.contact-section {
  margin: 0 40rpx 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 24rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.feature-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.feature-icon {
  font-size: 56rpx;
  margin-bottom: 16rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.5;
}

/* 团队列表 */
.team-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.team-member {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
}

.member-role {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 8rpx;
}

.member-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
}

/* 联系方式 */
.contact-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.contact-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-label {
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 8rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #0ea5e9;
  font-weight: 500;
}

/* 版权信息 */
.copyright {
  text-align: center;
  padding: 40rpx;
  font-size: 24rpx;
  color: #94a3b8;
  line-height: 2;
}
