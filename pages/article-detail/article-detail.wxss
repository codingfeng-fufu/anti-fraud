/* pages/article-detail/article-detail.wxss */
.article-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f9ff 0%, #e0f2fe 100%);
  padding-bottom: 280rpx; /* v3：评论输入栏 + 底部操作栏 */
}

/* 文章头部 */
.article-header {
  background: white;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.tag {
  display: inline-block;
  padding: 10rpx 28rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  margin-bottom: 24rpx;
  font-weight: 600;
}

.tag-danger {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  color: #dc2626;
}

.tag-warning {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  color: #d97706;
}

.tag-info {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #2563eb;
}

.article-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #0f172a;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.article-meta {
  display: flex;
  gap: 32rpx;
  font-size: 24rpx;
  color: #94a3b8;
}

/* 文章内容 */
.article-content {
  background: white;
  padding: 40rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  line-height: 1.8;
  color: #1e293b;
}

.article-content rich-text {
  word-break: break-all;
  display: block;
}

/* rich-text 内部元素样式 */
.article-content rich-text p {
  margin-bottom: 20rpx;
  color: #1e293b;
  background: transparent;
}

.article-content rich-text h1,
.article-content rich-text h2,
.article-content rich-text h3 {
  font-weight: 700;
  color: #0f172a;
  background: transparent;
  margin: 30rpx 0 20rpx;
}

.article-content rich-text strong {
  font-weight: 700;
  color: #0f172a;
}

.article-content rich-text div,
.article-content rich-text span {
  background: transparent;
  color: #1e293b;
}

/* v3 评论区 */
.comments-section{
  background:#fff;
  padding:40rpx;
  margin-bottom:20rpx;
}
.empty-comment{
  text-align:center;
  color:#94a3b8;
  font-size:26rpx;
  padding:20rpx 0;
}
.comment-item{
  display:flex;
  padding:18rpx 0;
  border-top:1rpx solid #f1f5f9;
}
.comment-item:first-child{border-top:none;}
.comment-item.reply{padding-left:40rpx;}
.comment-avatar{
  width:64rpx;
  height:64rpx;
  border-radius:32rpx;
  background:#e2e8f0;
}
.comment-avatar.placeholder{display:flex;align-items:center;justify-content:center;}
.comment-body{flex:1;margin-left:16rpx;}
.comment-top{display:flex;justify-content:space-between;align-items:center;}
.comment-name{font-size:28rpx;font-weight:700;color:#0f172a;}
.comment-time{font-size:22rpx;color:#94a3b8;}
.comment-content{margin-top:6rpx;font-size:28rpx;color:#0f172a;line-height:1.6;word-break:break-all;}
.reply-to{color:#0ea5e9;}
.comment-actions{margin-top:6rpx;}
.reply-btn{font-size:24rpx;color:#0ea5e9;}

/* v3 评论输入栏 */
.comment-input-bar{
  position:fixed;
  left:0;
  right:0;
  bottom: 140rpx; /* above .article-actions */
  background:#fff;
  border-top:1rpx solid #e2e8f0;
  display:flex;
  align-items:center;
  gap:12rpx;
  padding:14rpx 16rpx;
  z-index: 101;
}
.comment-input{
  flex:1;
  background:#f1f5f9;
  border-radius:999rpx;
  padding:14rpx 18rpx;
  font-size:28rpx;
}
.comment-send{
  background:#0ea5e9;
  color:#fff;
  border-radius:999rpx;
  font-size:28rpx;
  padding:0 26rpx;
  height:72rpx;
  line-height:72rpx;
}

/* 相关推荐 */
.related-section {
  background: white;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.related-card {
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.related-card:last-child {
  margin-bottom: 0;
}

.related-card:active {
  background: #f1f5f9;
  transform: translateX(10rpx);
}

.related-title {
  font-size: 28rpx;
  color: #1e293b;
  margin-bottom: 12rpx;
  font-weight: 500;
  line-height: 1.5;
}

.related-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #94a3b8;
}

/* 底部操作栏 */
.article-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 40rpx 30rpx 40rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
  border-top: 1rpx solid #f1f5f9;
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border: none;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 24rpx;
  color: #0ea5e9;
  transition: all 0.3s;
}

.action-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
}

.action-btn::after {
  border: none;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  font-weight: 500;
}
